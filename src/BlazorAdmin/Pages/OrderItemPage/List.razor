@page "/orders"
@attribute [Authorize(Roles = BlazorShared.Authorization.Constants.Roles.ADMINISTRATORS)]
@inherits BlazorAdmin.Helpers.BlazorComponent
@namespace BlazorAdmin.Pages.OrderItemPage

<PageTitle>eShopOnWeb Admin: Manage Orders</PageTitle>

<h1>Manage Orders</h1>

@if (allOrders == null)
{
    <Spinner></Spinner>
}
else
{

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>User</th>
                <th>Email</th>
                <th>Buyer Id</th>
                <th>Order Date</th>
                <th>Total Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="cursor-pointer">
            @foreach (var item in allOrders)
            {
                <tr >                    
                    <td>@item.OrderId</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.BuyerId</td>
                    <td>@item.OrderDate</td>
                    <td>$ @item.Total</td>
                    <td>
                        <button @onclick="@(() => DetailsClick(item.OrderId))" @onclick:stopPropagation="true" class="btn btn-primary">
                            Detail
                        </button>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>

     <Details OnEditClick="EditClick" @ref="DetailsComponent"></Details>
